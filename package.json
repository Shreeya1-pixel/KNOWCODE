{
  "name": "knowcode",
  "displayName": "KNOWCODE",
  "description": "Interactive code learning assistant - Explain Like I'm 5, Learning Mode, and more",
  "version": "1.0.0",
  "publisher": "knowcode",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shreeya1-pixel/KNOWCODE.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Education",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "code",
    "learning",
    "explanation",
    "education",
    "ai",
    "tutorial"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "knowcode.explainLike5",
        "title": "KNOWCODE: Explain Like I'm 5",
        "category": "KNOWCODE"
      },
      {
        "command": "knowcode.learningMode",
        "title": "KNOWCODE: Learning Mode",
        "category": "KNOWCODE"
      },
      {
        "command": "knowcode.interviewMode",
        "title": "KNOWCODE: Interview Mode",
        "category": "KNOWCODE"
      },
      {
        "command": "knowcode.generateMCQs",
        "title": "KNOWCODE: Generate MCQs",
        "category": "KNOWCODE"
      },
      {
        "command": "knowcode.generateProject",
        "title": "KNOWCODE: Generate Project",
        "category": "KNOWCODE"
      },
      {
        "command": "knowcode.openTutorial",
        "title": "KNOWCODE: Open Tutorial",
        "category": "KNOWCODE"
      },
      {
        "command": "knowcode.openPanel",
        "title": "KNOWCODE: Open Panel",
        "category": "KNOWCODE"
      }
    ],
    "keybindings": [
      {
        "command": "knowcode.explainLike5",
        "key": "ctrl+shift+5",
        "mac": "cmd+shift+5",
        "when": "editorTextFocus"
      },
      {
        "command": "knowcode.learningMode",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "knowcode.interviewMode",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorTextFocus"
      },
      {
        "command": "knowcode.openPanel",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "knowcode.explainLike5",
          "group": "KNOWCODE",
          "when": "editorTextFocus"
        },
        {
          "command": "knowcode.learningMode",
          "group": "KNOWCODE",
          "when": "editorTextFocus"
        },
        {
          "command": "knowcode.interviewMode",
          "group": "KNOWCODE",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "KNOWCODE",
      "properties": {
        "knowcode.useLocalModel": {
          "type": "boolean",
          "default": true,
          "description": "Use local Ollama model (recommended for privacy)"
        },
        "knowcode.localModelName": {
          "type": "string",
          "default": "llama2:7b-chat",
          "description": "Local model to use (install with: ollama pull llama2:7b-chat)"
        },
        "knowcode.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama API endpoint"
        },
        "knowcode.openAIKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key (optional, for cloud-based explanations)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/test-electron": "^2.3.8",
    "@types/mocha": "^10.0.0"
  },
  "dependencies": {
    "marked": "^9.0.0"
  }
} 